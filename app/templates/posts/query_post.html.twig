{% extends 'base.html.twig' %}

{% block title %}Результаты поиска
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Результаты поиска:</h1>

		{% if posts %}
			<div class="list-group">
				{% for post in posts %}
					<a href="{{ path('detail_post', {slug: post.slug}) }}" class="list-group-item list-group-item-action">
						<h5 class="mb-1">{{ post.title }}</h5>
						<p class="mb-1 text-truncate">{{ post.body | slice(0, 255) ~ '...' }}</p>
					</a>
				{% endfor %}
			</div>
		{% else %}
			<div class="alert alert-warning" role="alert">
				Ничего не найдено.
				<a href="{{ path('blog_posts') }}" class="alert-link">Вернуться на главную</a>.
			</div>
		{% endif %}
	</div>
{% endblock %}

