{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-4">
		<h1>{{ post.title }}</h1>
		<p>{{ post.body }}</p>

		<div class="d-flex justify-content-between">
			<a href="{{ path('edit_post', {'slug': post.slug}) }}" class="btn btn-warning">Редактировать</a>
			<a href="{{ path('delete_post', {'slug': post.slug}) }}" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этот пост?')">Удалить</a>
		</div>
	</div>
{% endblock %}

