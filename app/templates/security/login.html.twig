{% extends 'base.html.twig' %}

{% block body %}
	<div class="container" style="padding-top: 50px; max-width: 500px;">
		{% if error %}
			<div class="alert alert-danger" role="alert">
				{{ error.message }}
			</div>
		{% endif %}

		<form method="post" class="shadow-sm p-4 bg-light rounded">
			<h3 class="text-center mb-4">Вход</h3>

			<div class="form-group mb-3">
				<label for="username" class="form-label">Электронный адрес</label>
				<input type="text" name="_username" id="username" required="required" class="form-control" placeholder="Введите ваш email">
				<small class="form-text text-muted">Введите электронный адрес.</small>
			</div>

			<div class="form-group mb-4">
				<label for="password" class="form-label">Пароль</label>
				<input type="password" name="_password" id="password" required="required" class="form-control" placeholder="Введите ваш пароль">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="d-grid">
				<button type="submit" class="btn btn-primary">Войти</button>
			</div>
		</form>

		<div class="text-center mt-3">
			<a href="{{ path('app_register') }}" class="btn btn-outline-success">Нет аккаунта? Зарегистрироваться</a>
		</div>
	</div>
{% endblock %}

