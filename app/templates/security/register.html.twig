{% extends 'base.html.twig' %}

{% block title %}
	Регистрация
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h3 class="text-center mb-4">Регистрация</h3>

				{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

				<div class="mb-3">
					{{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.plainPassword.first, 'Пароль', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.plainPassword.first, {'attr': {'class': 'text-danger'}}) }}
				</div>

				<div class="mb-3">
					{{ form_label(form.plainPassword.second, 'Повторите пароль', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.plainPassword.second, {'attr': {'class': 'text-danger'}}) }}
				</div>

				<div class="d-grid">
					<button type="submit" class="btn btn-success">Зарегистрироваться</button>
				</div>

				{{ form_end(form) }}

				<div class="text-center mt-3">
					<a href="{{ path('login') }}" class="btn btn-outline-primary">Уже есть аккаунт? Войти</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

